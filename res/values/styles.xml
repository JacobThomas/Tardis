<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--App theme: Kill the title bar, use a light background-->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <!--Fill width and height-->
    <style name="FillWidthAndHeight">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!--Fill screen vertically-->
    <style name="FillScreenVerticalLinearLayout" parent="FillWidthAndHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <!--Wrapped width and height-->
    <style name="WrappedWidthAndHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Text style through out the app-->
    <style name="H1" parent="style/WrappedWidthAndHeight">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/TardisBlue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/header_padding</item>
    </style>
</resources>
